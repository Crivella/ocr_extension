{

  "manifest_version": 2,
  "name": "TEST",
  "version": "1.0",

  "description": "This is a test extension",

  "icons": {
    "48": "icons/language-48.png"
  },

  "browser_action": {
    "default_icon": "icons/language-48.png",
    "default_title": "TEST",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["dist/background.js"]
  },

  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs"
  ]

}
